<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFD"
        tools:context=".RegisterActivity">

    <TextView
            android:id="@+id/zarejestruj_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zarejestruj się"
            android:textColor="#0098FF"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="44dp"
            android:gravity="center"
            app:layout_constraintHorizontal_bias="0.496" />

    <EditText
            android:id="@+id/registerFirstName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Imię"
            android:inputType="text"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/zarejestruj_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <EditText
            android:id="@+id/registerLastName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nazwisko"
            android:inputType="text"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/registerFirstName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <EditText
            android:id="@+id/registerEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/registerLastName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <EditText
            android:id="@+id/registerPhoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Numer Telefonu"
            android:inputType="phone"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/registerEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <!-- Add this EditText for the address -->
    <EditText
            android:id="@+id/registerAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Adres"
            android:inputType="text"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/registerPhoneNumber"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/openMapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Wybierz lokalizację"
            app:layout_constraintTop_toBottomOf="@id/registerAddress"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <EditText
            android:id="@+id/registerTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Tytuł"
            android:inputType="text"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/openMapButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <EditText
            android:id="@+id/registerPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Hasło"
            android:inputType="textPassword"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/registerTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <EditText
            android:id="@+id/registerPassword2Repeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Powtórz Hasło"
            android:inputType="textPassword"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/registerPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/registerButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#0375C3"
            android:text="Zarejestruj"
            android:textColor="#FFFFFF"
            app:layout_constraintTop_toBottomOf="@+id/registerPassword2Repeat"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="32dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
