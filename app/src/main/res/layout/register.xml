<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FDFDFD"
        tools:context=".BaseActivity">

    <EditText
            android:id="@+id/registerPassword"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:fontFamily="sans-serif-thin"
            android:inputType="textPassword"
            android:paddingLeft="50px"
            android:text="Hasło"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/registerEmail"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/registerPassword2Repeat"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="68dp"
            android:layout_marginEnd="68dp" />

    <TextView
            android:id="@+id/zarejestruj_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zarejestruj się"
            android:textColor="#0098FF"
            android:textSize="40sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/registerName"
            android:layout_marginTop="64dp"
            android:layout_marginStart="9dp"
            android:layout_marginBottom="42dp"
            app:layout_constraintBottom_toTopOf="@+id/registerName" />

    <EditText
            android:id="@+id/registerEmail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:ems="10"
            android:fontFamily="sans-serif-thin"
            android:inputType="textEmailAddress"
            android:paddingLeft="40px"
            android:text="E-mail"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@+id/registerName"
            android:layout_marginBottom="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/registerPassword"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="65dp"
            android:layout_marginEnd="65dp" />

    <Button
            android:id="@+id/registerButton"
            android:layout_width="192dp"
            android:layout_height="0dp"
            android:background="#0375C3"
            android:text="Zarejestruj"
            android:textColor="#FFFFFF"
            android:textColorHighlight="#000008"
            app:layout_constraintTop_toBottomOf="@+id/registerPassword2Repeat"
            android:layout_marginBottom="211dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:inputType="text"
            android:text="Imię"
            android:ems="10"
            android:id="@+id/registerName"
            app:layout_constraintTop_toBottomOf="@+id/zarejestruj_text"
            android:layout_marginBottom="23dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/registerEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="67dp"
            android:layout_marginEnd="67dp" />

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/registerPassword2Repeat"
            android:text="haslo"
            app:layout_constraintStart_toStartOf="@+id/registerPassword"
            android:layout_marginStart="7dp"
            app:layout_constraintTop_toBottomOf="@+id/registerPassword"
            android:layout_marginBottom="35dp"
            app:layout_constraintBottom_toTopOf="@+id/registerButton" />

</androidx.constraintlayout.widget.ConstraintLayout>