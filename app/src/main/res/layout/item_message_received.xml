<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:padding="3dp"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/senderProfileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center|bottom"
            android:src="@drawable/ic_profile_icon"/>

    <!-- Container for Message Text and Timestamp -->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Timestamp (positioned separately above or below) -->
        <TextView
                android:id="@+id/messageTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@android:color/darker_gray"
                android:layout_gravity="start|left"
                android:layout_marginTop="4dp" /> <!-- Adds some space above the timestamp -->

        <TextView
                android:id="@+id/messageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/message_received_background"
                android:padding="10dp"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>